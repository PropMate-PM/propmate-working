# PropMate Production Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ===============================================
# SUPABASE CONFIGURATION (REQUIRED)
# ===============================================
# Your Supabase project URL
VITE_SUPABASE_URL=

# Your Supabase anon/public key (safe to expose in frontend)
VITE_SUPABASE_ANON_KEY=

# Your Supabase service role key (KEEP SECRET - server use only)
SUPABASE_SERVICE_ROLE_KEY=

# ===============================================
# ADMIN CONFIGURATION
# ===============================================
# Initial admin user email
ADMIN_EMAIL=admin@propmate.site

# Initial admin user password (use a strong password)
ADMIN_PASSWORD=

# ===============================================
# EMAIL SERVICE CONFIGURATION (Choose one)
# ===============================================
# Option 1: Resend (Recommended)
RESEND_API_KEY=re_GoWsAZC9_DEuYgprMi14hPUHTkAeuJCLB
VITE_EMAIL_API_URL=/.netlify/functions/send-email

# Option 2: SendGrid
# SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Email sender configuration (multi-address)
APP_NAME=PropMate
PRODUCTION_DOMAIN=propmate.site

# Default (backward compatibility)
FROM_EMAIL=noreply@propmate.site
FROM_NAME=PropMate

# Category senders
LEGAL_FROM_EMAIL=legal@propmate.site
LEGAL_FROM_NAME=PropMate Legal
NOREPLY_FROM_EMAIL=noreply@propmate.site
NOREPLY_FROM_NAME=PropMate
SUPPORT_FROM_EMAIL=support@propmate.site
SUPPORT_FROM_NAME=PropMate Support
ADMIN_FROM_EMAIL=admin@propmate.site
ADMIN_FROM_NAME=PropMate Admin
PAYMENTS_FROM_EMAIL=payments@propmate.site
PAYMENTS_FROM_NAME=PropMate Payments

# Support email for contact links
SUPPORT_EMAIL=support@propmate.site

# ===============================================
# SECURITY CONFIGURATION
# ===============================================
# JWT secret for additional security (optional)
JWT_SECRET=your-jwt-secret-here

# Rate limiting configuration (optional - defaults provided)
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW_MINUTES=10

# Fraud detection thresholds (optional - defaults provided)
FRAUD_MAX_PURCHASE_AMOUNT=50000
FRAUD_HIGH_AMOUNT_THRESHOLD=10000
FRAUD_MAX_REQUESTS_PER_HOUR=5

# ===============================================
# MONITORING & ANALYTICS (Optional)
# ===============================================
# Google Analytics ID
VITE_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
VITE_SENTRY_DSN=https://your-sentry-dsn-here

# PostHog API key for analytics
VITE_POSTHOG_KEY=phc_your-posthog-key-here

# ===============================================
# PRODUCTION DEPLOYMENT
# ===============================================

# SSL certificate configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# CDN configuration (if using)
CDN_URL=https://cdn.propmate.site

# ===============================================
# BACKUP & MAINTENANCE
# ===============================================
# Backup storage configuration
BACKUP_S3_BUCKET=propmate-backups
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We're performing scheduled maintenance. Please check back soon.

# ===============================================
# DEVELOPMENT ONLY
# ===============================================
VITE_EMAIL_API_URL=/.netlify/functions/send-email

# Local development ports
DEV_PORT=5173
DEV_API_PORT=3001